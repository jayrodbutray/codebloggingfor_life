<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blogpost:</h3>

    <form class="form new-blogpost-form">
      <div class="form-group">
        <label for="blogpost-name">Blogpost Title:</label>
        <input class="form-input" type="text" id="blogpost-name" name="blogpost-name" />
      </div>
      
      <div class="form-group">
        <label for="blogpost-desc">Description:</label>
        <textarea class="form-input" id="blogpost-desc" name="blogpost-desc"></textarea>
      </div>
      <div class="form new-group">
                <label for="blogpost-article">Article Content:</label>
                <textarea class="form-input" id="blogpost-article" name="blogpost-article"></textarea>
            </div>
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>


  <div class="col-md-6 blogpost-list">
  <h3>Current Blogposts:</h3>
  {{#each user.blogposts as |blogpost|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blogpost/{{blogpost.id}}">{{blogpost.title}}</a></h4>
        <p>Author: {{blogpost.author}}</p>
        <p>Date Published: {{blogpost.date_published}}</p>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blogpost.id}}">DELETE</button>
      </div>
    </div>
  {{/each}}
</div>

<script src="./js/profile.js"></script>
